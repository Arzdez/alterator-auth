#!/usr/bin/perl

use Config::IniFiles;

$config = shift;
$section = shift;

open( CONFIG, '>>', $config ) or die "Can't open $config";
close( CONFIG );
$cfg = Config::IniFiles->new( -file => $config, -allowempty => 1 );

foreach $line ( <STDIN> ) {
    chomp( $line );
	my ( $name, $value ) = split( '=', $line );
	$name  =~ s/^\s+|\s+$//g;
	$value =~ s/^\s+|\s+$//g;
	#print "[$section] $name = $value\n";
	$cfg->newval( $section, $name, $value );
}


return 1 if $cfg->RewriteConfig() == undef;
